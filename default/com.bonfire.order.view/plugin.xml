<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="OrderView">
         <property
               name="appName"
               value="OrderView">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.bonfire.order.view.selectionset">
         <with
               variable="org.eclipse.ui.selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <instanceof
                     value="com.bonfire.order.view.parts.OverviewPart">
               </instanceof>
            </iterate>
         </with>
      </definition>
   </extension>

</plugin>
